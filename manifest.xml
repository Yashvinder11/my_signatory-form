<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/appforoffice/1.1/bundle" xsi:type="MailApp">
  
  <Id>REPLACE-THIS-WITH-YOUR-OWN-GUID</Id>
  
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <DisplayName DefaultValue="Signatory Request Form"/>
  <Description DefaultValue="Collects signatory and context data for approval."/>
  
  <IconUrl DefaultValue="https://cdn.office.net/files/images/add-in-default-icons/icon-16.png"/>
  <HighResolutionIconUrl DefaultValue="https://cdn.office.net/files/images/add-in-default-icons/icon-80.png"/>
  
  <SupportUrl DefaultValue="https://github.com"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://YOUR-USERNAME.github.io/YOUR-REPO-NAME/index.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile DefaultValue="https://YOUR-USERNAME.github.io/YOUR-REPO-NAME/index.html"/>
          
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label DefaultValue="Contract Forms"/>
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label DefaultValue="New Signatory Request"/>
                  <Supertip>
                    <Title DefaultValue="New Signatory Request"/>
                    <Description DefaultValue="Opens the custom task pane to fill out a signatory request."/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation DefaultValue="https://YOUR-USERNAME.github.io/YOUR-REPO-NAME/index.html"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://cdn.office.net/files/images/add-in-default-icons/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://cdn.office.net/files/images/add-in-default-icons/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://cdn.office.net/files/images/add-in-default-icons/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://YOUR-USERNAME.github.io/YOUR-REPO-NAME/index.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="Contract Forms"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="New Signatory Request"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens the signatory request form."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
